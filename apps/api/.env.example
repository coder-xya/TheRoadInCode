# TheRoadInCode Environment Variables
# Copy this file to .env.local and fill in the values

# Database
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/roadincode"

# JWT (IMPORTANT: Must be at least 32 characters!)
JWT_SECRET="your-super-secret-jwt-key-min-32-chars"
JWT_REFRESH_SECRET="your-super-secret-refresh-key-32-chars"
JWT_EXPIRES_IN="15m"
JWT_REFRESH_EXPIRES_IN="7d"

# OAuth (optional)
GITHUB_CLIENT_ID=""
GITHUB_CLIENT_SECRET=""
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""

# CORS
CORS_ORIGIN="http://localhost:3000"

# Redis (optional)
REDIS_URL="redis://localhost:6379"
